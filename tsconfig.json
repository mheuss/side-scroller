{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "jsx": "react",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "node_modules",
    "node_modules/*",
    "node_modules/**/*"
  ]
}